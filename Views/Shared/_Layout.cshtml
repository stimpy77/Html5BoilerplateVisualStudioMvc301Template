@{
    // FYI: Web.Debug.config / Web.Release.config defines UseMinifiedResources to "true" during packaging/deployment
    bool UseMinifiedResources = System.Configuration.ConfigurationManager.AppSettings["UseMinifiedResources"] != "false";
}
<!doctype html>
<!--[if lt IE 7 ]> <html class="no-js ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="no-js ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="no-js ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  @if (UseMinifiedResources)
  {
    <link href="@Url.Content("~/Content/html5boilerplate-site.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style.min.css")" rel="stylesheet" type="text/css" />
  }
  else
  { 
    <link href="@Url.Content("~/Content/html5boilerplate-site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
  }
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
  @if (false)
  {
    <script type="text/javascript" src="../../Scripts/jquery-1.5.1-vsdoc.js"></script>
  }
</head>

<body>
  <div id="container">
    <header>
    @RenderSection("header")
    </header>
    <div id="main" role="main">
    @RenderBody()
    </div>
    <footer>
    @RenderSection("footer")
    </footer>
  </div> <!-- eo #container -->

  @* -- Using Html.Raw here to avoid IntelliSense confusion -- *@
  @Html.Raw("<script src=\"//ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.2.min.js\"></script>")
  @Html.Raw("<script>window.jQuery || document.write(\"<script src='" + @Url.Content(\"~/Scripts/jquery-1.5.1.min.js\")" + "'>\\x3C/script>\")</script>")
@if (UseMinifiedResources)
{
  <!-- scripts concatenated and minified via build script-->
  <script src="@Url.Content("~/Scripts/app-plugins.min.js")"></script>
  <script src="@Url.Content("~/Scripts/app.min.js")"></script>
}
else
{ 
  <script src="@Url.Content("~/Scripts/app-plugins.js")"></script>
  <script src="@Url.Content("~/Scripts/app.js")"></script>
}
  @RenderSection("script")
  <!--[if lt IE 7 ]>
    <script src="@Url.Content("~/Scripts/dd_belatedpng.js")"></script>
    <script>DD_belatedPNG.fix("img, .png_bg");</script>
  <![endif]-->
</body>
</html>
